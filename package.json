{
  "name": "stated-bean",
  "version": "0.5.1",
  "description": "A light but scalable state management library with react hooks",
  "repository": "git@github.com:mjolnirjs/stated-bean.git",
  "license": "MIT",
  "main": "lib/cjs.js",
  "module": "lib/es",
  "es2015": "lib/es2015.js",
  "fesm5": "lib/esm.js",
  "unpkg": "lib/umd.min.js",
  "types": "lib/types/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rimraf dist lib && run-p build:**",
    "build:bundle": "r --prod",
    "build:example": "parcel build ./example/index.html",
    "build:ts": "tsc -p src",
    "dev": "parcel ./example/index.html --https",
    "lint": "run-p lint:*",
    "lint:es": "cross-env EFF_NO_LINK_RULES=true eslint . --ext js,md,mdx,ts,tsx -f friendly",
    "lint:tsc": "tsc --noEmit",
    "serve": "serve dist",
    "start": "yarn dev",
    "test": "jest",
    "type-coverage": "type-coverage --detail --ignore-catch --ignore-files 'lib/**/*' --strict"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "tslib": ">=1.0.0",
    "rxjs": ">=6.0.0"
  },
  "devDependencies": {
    "@1stg/babel-preset": "^0.7.0",
    "@1stg/commitlint-config": "^0.1.0",
    "@1stg/eslint-config": "^0.12.13",
    "@1stg/husky-config": "^0.3.0",
    "@1stg/lint-staged": "^0.8.0",
    "@1stg/prettier-config": "^0.3.2",
    "@1stg/remark-config": "^0.2.2",
    "@1stg/rollup-config": "^0.10.5",
    "@1stg/tsconfig": "^0.6.0",
    "@babel/core": "^7.6.2",
    "@commitlint/cli": "^8.2.0",
    "@testing-library/react-hooks": "^2.0.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "@types/react": "^16.9.3",
    "@types/react-dom": "^16.9.1",
    "@types/react-test-renderer": "^16.9.0",
    "cross-env": "^6.0.0",
    "eslint": "^6.4.0",
    "husky": "^3.0.5",
    "injection-js": "^2.2.2",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-test-renderer": "^16.9.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rollup": "^1.21.4",
    "rxjs": "^6.5.3",
    "serve": "^11.2.0",
    "ts-jest": "^24.1.0",
    "type-coverage": "^2.3.0",
    "typescript": "^3.6.3"
  },
  "sideEffects": false,
  "alias": {
    "stated-bean": "./src"
  },
  "typeCoverage": {
    "atLeast": 98
  }
}
